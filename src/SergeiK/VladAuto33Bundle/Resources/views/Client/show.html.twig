{% extends '::admin.html.twig' %}

{% block middle_bar -%}
    <h1>Client</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Middlename</th>
                <td>{{ entity.middleName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }}</td>
            </tr>
            <tr>
                <th>Driverlicence</th>
                <td>{{ entity.driverLicence }}</td>
            </tr>
            <tr>
                <th>Expirience</th>
                <td>{{ entity.expirience }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Passportnumber</th>
                <td>{{ entity.passportNumber }}</td>
            </tr>
            <tr>
                <th>Passportissuer</th>
                <td>{{ entity.passportIssuer }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Usagearea</th>
                <td>{{ entity.usageArea }}</td>
            </tr>
            <tr>
                <th>Punctuality</th>
                <td>{{ entity.punctuality }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_client') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_client_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_client_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
