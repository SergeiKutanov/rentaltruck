{% extends '::admin.html.twig' %}

{% block middle_bar %}
    <h1>Список Клиентов</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>Возраст</th>
                <th>Номер Паспорта</th>
                <th>Телефон</th>
                <th>Пунктуальность</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.middleName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.passportNumber }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.punctuality }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_client_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_client_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_client_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
