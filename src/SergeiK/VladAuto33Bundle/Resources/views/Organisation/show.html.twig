{% extends '::admin.html.twig' %}

{% block middle_bar -%}
    <h1>Organisation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Inn</th>
                <td>{{ entity.iNN }}</td>
            </tr>
            <tr>
                <th>Bankaccount</th>
                <td>{{ entity.bankAccount }}</td>
            </tr>
            <tr>
                <th>Corraccount</th>
                <td>{{ entity.corrAccount }}</td>
            </tr>
            <tr>
                <th>Bic</th>
                <td>{{ entity.bIC }}</td>
            </tr>
            <tr>
                <th>Ceofirstname</th>
                <td>{{ entity.cEOFirstName }}</td>
            </tr>
            <tr>
                <th>Ceomiddlename</th>
                <td>{{ entity.cEOMiddleName }}</td>
            </tr>
            <tr>
                <th>Ceolastname</th>
                <td>{{ entity.cEOLastName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('organisation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('organisation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('organisation_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
