{% extends '::admin.html.twig' %}

{% block middle_bar -%}
    <h1>Rent</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pickupdate</th>
                <td>{{ entity.pickUpDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Returndate</th>
                <td>{{ entity.returnDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Pickupmillage</th>
                <td>{{ entity.pickUpMillage }}</td>
            </tr>
            <tr>
                <th>Returnmillage</th>
                <td>{{ entity.returnMillage }}</td>
            </tr>
            <tr>
                <th>Payment</th>
                <td>{{ entity.payment }}</td>
            </tr>
            <tr>
                <th>Deposit</th>
                <td>{{ entity.deposit }}</td>
            </tr>
            <tr>
                <th>Returndeposit</th>
                <td>{{ entity.returnDeposit }}</td>
            </tr>
            <tr>
                <th>Usagearea</th>
                <td>{{ entity.usageArea }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ entity.notes }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('rent') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('rent_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    <li>
        <a href="{{ path('print', { 'id': entity.id }) }}">
            Print
        </a>
    </li>
        <form action="{{ path('rent_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
